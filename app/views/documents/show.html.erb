      <p class="no-margin-bottom">São Paulo (SP)</p>
      <p class="no-margin-bottom">01227-200</p>
      <p>joao@banfox.com.br</p>
      <br>
    </div>
    <div class="signature">
      <strong><p>Contratante</p></strong>
      <br>
      <p class="no-margin-bottom signature-line"><%= @content[:seller][:company_name] %></p>
      <p class="no-margin-bottom"><%= @content[:seller][:cnpj] %></p>
      <p class="no-margin-bottom"><%= @content[:seller][:address] %></p>
      <p class="no-margin-bottom"><%= @content[:seller][:city] %> (<%= @content[:seller][:state]  %>)</p>
      <p class="no-margin-bottom"><%= @content[:seller][:zip_code] %></p>
      <p><%= @content[:seller][:email] %></p>
      <br>
    </div>
    <% @content[:signers].each do |signer| %>
      <% if signer[:sign_as].include? "joint_debtor" %>
        <div class="signature">
          <strong><p>Devedor Solidário</p></strong>
          <br>
          <p class="no-margin-bottom signature-line"><%= signer[:name] %></p>
          <p class="no-margin-bottom"><%= signer[:documentation] %></p>
          <p class="no-margin-bottom"><%= signer[:email] %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

